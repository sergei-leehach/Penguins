@model SiteDevelopment.Models.News

<div class="col-lg-4"><img src="@Model.Image" width="100%" height="100%" /></div>
<div class="col-lg-8">
    <div class="news-header">@Html.ActionLink(Model.Title, "News", new { id = Model.NewsId })</div>
    <div class="news-content">Дата публикации: @Html.Raw(Model.PublicationTime.ToString("d.MM.yy HH:mm"))</div>
    <div class="news-content">Автор: @Html.Raw(Model.Author.Nickname)</div>
    <div class="news-content">
        Тэги:
        @foreach (var item in Model.Bundle)
        {
            @Html.ActionLink(item.Tag.Title + " ", "Index", new { tagId = item.Tag.Id })
        }
    </div>
</div>


