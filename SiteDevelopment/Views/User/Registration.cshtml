@model SiteDevelopment.Models.User

@{
    ViewBag.Title = "Registraion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create an account</h1>

@using (Html.BeginForm("Registration", "User", FormMethod.Post, new { id = "form" }))
{
    <div class="any-div">
        <fieldset>
            <legend>Registration</legend>

            <div>
                @Html.LabelFor(x => x.Nickname)
            </div>
            <div>
                @Html.EditorFor(x => x.Nickname)
                @Html.ValidationMessageFor(x => x.Nickname)
            </div>
            <div>
                @Html.LabelFor(x => x.Email)
            </div>
            <div>
                @Html.EditorFor(x => x.Email)
                @Html.ValidationMessageFor(x => x.Email)
            </div>
            <div>
                @Html.LabelFor(x => x.Password)
            </div>
            <div>
                @Html.EditorFor(x => x.Password, null, "password", new { htmlAttributes = new { onkeyup = "Compare();" }})
                @Html.ValidationMessageFor(x => x.Password)
            </div>
            <div>
                <label>Confirm Password</label>
            </div>
            <div>
                <input id="confirm" type="password" onkeyup="Compare();"/>
                <span id="validation"></span>
            </div>

            <div>
                <input type="submit" value="Register"/>
            </div>
        </fieldset>
    </div>
}



